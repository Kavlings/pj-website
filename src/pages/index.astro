---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="PJ Marketing Solutions - Helping Business Grow">
    <Navigation />



<section class="hero">
    <video class="hero-video" autoplay muted loop playsinline preload="metadata">
        <source src="/hero.mp4" type="video/mp4">
        Your browser does not support the video tag
    </video>

    <div class="hero-overlay">
        <h1> 
            Precise Reach. <br>
            Real Growth.
        </h1>
        <p>
            We deliver data-driven marketing strategies that transform your brand presence and drive measurable results for your business.
        </p>
    </div>

</section>
<section>

</section>

<section class = "side-by-side">
    <h2>
        1000+ projects completed
    </h2>

    <h2>
        Consistent results since 2014.
    </h2>
    
</section>

<section>
    <h2>
        Our Services
    </h2>
</section>

<section class="client-logos">
    <h2>Trusted Partnerships</h2>
    <div class="logo-carousel">
        <div class="logo-track ">
            <!-- First set of logos -->
             <img class="client-logo" src="/logos/dwtc.png" alt="Dubai World Trade Centre">
             
        </div>
    </div>
</section>

    <Footer slot="footer" />
</Layout>

<style>

    .hero {
        display: block;
        position: relative;
        min-height: 80vh;
        width: 100%;
        overflow: hidden;
    }

    .hero-video {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero::after {
        content: "";
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.35);
    }

    .hero-overlay {
        position: relative;
        z-index: 1;
        display: grid;
        place-items: center;
        gap: 1rem;
        text-align: center;
        padding: 6rem 2rem;
        color: #fff;
    }

    .hero-overlay h1 {
        font-size: 3rem;
        font-weight: bold;
        margin: 0;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.4);
    }

    .hero-overlay p {
        font-size: 1.25rem;
        max-width: 60ch;
        margin: 0 auto;
        text-shadow: 0 1px 6px rgba(0, 0, 0, 0.35);
    }


    .side-by-side {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        padding: 2rem 0;
    }

    .side-by-side h2 {
        flex: 1;
        text-align: center;
        margin: 0;
    }

    .client-logo {
        width: 300px;
        height: auto;
        object-fit: contain;
    }
    .client-logos {
        display: flex;
        flex-direction: column;
    }
</style>






