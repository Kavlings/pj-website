---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="PJ Marketing Solutions - Helping Business Grow">
    <section class="hero">
    <Navigation />
    <video class="hero-video" autoplay muted loop playsinline preload="metadata">
        <source src="/hero.mp4" type="video/mp4">
        Your browser does not support the video tag
    </video>

    <div class="hero-overlay">
        <h1> 
            Precise Reach. <br>
            Real Growth.
        </h1>
        <p>
            Data-driven marketing strategies to drive measurable results for your business.
        </p>
    </div>

    
</section>
<section>

</section>

<section class = "side-by-side">
    <h2>
        [Impressive Fact]
    </h2>

    <h2>
        [Impressive Fact 2]
    </h2>
    
</section>



<section class="client-logos">
    <h2>Trusted Partnerships</h2>
        <div class="logo-track ">
            <!-- First set of logos -->
             <img class="client-logo" src="/logos/dwtc.png" alt="Dubai World Trade Centre">
             <img class="client-logo" src="/logos/meorient.png" alt="ME Orient">
             <img class="client-logo" src="/logos/gl-exhibitions.png" alt="GL Exhibitions">
             <img class="client-logo" src="/logos/tahaluf.png" alt="Tahaluf">
             <img class="client-logo" src="/logos/messe-frankfurt.jpg" alt="Tahaluf">
    </div>
</section>

<section class="services">
    <h2>
        Our Services
    </h2>
</section>
    <Footer slot="footer" />
</Layout>

<style>

    .hero {
        display: block;
        position: relative;
        min-height: 100vh;
        width: 100%;
        overflow: hidden;
    }

    .hero-video {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero::after {
        content: "";
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.35);
    }

    .hero-overlay {
        position: relative;
        z-index: 1;
        display: grid;
        place-items: center;
        gap: 1rem;
        text-align: center;
        padding: 10rem 2rem;
        color: #fff;
    }

    .hero-overlay h1 {
        font-size: 3rem;
        font-weight: bold;
        margin: 0;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.4);
    }

    .hero-overlay p {
        font-size: 1.25rem;
        max-width: 60ch;
        margin: 0 auto;
        text-shadow: 0 1px 6px rgba(0, 0, 0, 0.35);
    }

    .services {
        display: flex;
        justify-content: center;
        /* align-items: center; */
        text-align: center;
        min-height: 50vh;
        width: 100%;
    }
    .services h2 {
        margin: 0;
    }


    .side-by-side {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        padding: 2rem 0;
        /* min-height: 50vh; */
    }

    .side-by-side h2 {
        flex: 1;
        text-align: center;
        margin: 0;
    }

    .client-logo {
        width: 200px;
        height: 200px;
        object-fit: contain;
    }
    .client-logos {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 2rem;

    }
    .client-logos h2 {
        
    }
    .logo-track {
        display: flex;
        gap: 5rem;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
    }

    .services {
        margin-top: 5rem;
    }
</style>






