---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import CTA from "../components/CTA.astro";
---

<Layout title="PJ Marketing Solutions - Exhibition Growth Partners">
    <section class="hero">
    <Navigation />  
    <video class="hero-video" autoplay muted loop playsinline preload="metadata">
        <source src="/hero.mp4" type="video/mp4">
        Your browser does not support the video tag
    </video>

    <div class="hero-overlay">
        <h1> 
            Precise Reach. <br>
            Real Growth.
        </h1>
        <a href="/contact" class="hero-cta-button">Talk to Us</a>

    </div>

    
</section>
<section>

</section>
<div class="tag-line">
    <p>
    Data-driven marketing strategies to drive measurable results for your event.
</p>
</div>

<section class = "side-by-side">
    <h2>
        Trusted Partner Since 2014
    </h2>

    <h2>
        Over 1000 Projects Completed
    </h2>

</section>



<section class="client-logos">
    <!-- <h2>Trusted Partnerships</h2> -->
        <div class="logo-track ">
            <!-- First set of logos -->
             <img class="client-logo" src="/logos/dwtc.png" alt="Dubai World Trade Centre">
             <img class="client-logo" src="/logos/informa-middle-east.png" alt="Tahaluf">
             <img class="client-logo" src="/logos/tahaluf.png" alt="Tahaluf">
             <img class="client-logo" src="/logos/messe-frankfurt.jpg" alt="Tahaluf">
             <img class="client-logo" src="/logos/meorient.png" alt="ME Orient">
             <img class="client-logo" src="/logos/gl-exhibitions.png" alt="GL Exhibitions">

    </div>
</section>

<section class="services">


    <a href="/services" style="text-decoration: none; color:inherit">
        <h2>
            Services.
        </h2>
    </a>

        <a href="/services" aria-label="Go to Services" style="display:block">
            <img class="bg-video" src="/images/contact-us.webp" alt="Services background" loading="eager" decoding="async">
        </a>
</section>
<CTA />
    <Footer slot="footer" />
</Layout>

<style>

    .hero {
        display: block;
        position: relative;
        min-height: 100vh;
        width: 100%;
        overflow: hidden;
    }

    .hero-video {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero::after {
        content: "";
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.35);
    }

    .hero-overlay {
        position: relative;
        z-index: 1;
        display: grid;
        place-items: center;
        gap: 1rem;
        text-align: center;
        padding: 13rem 2rem;
        color: #fff;
    }

    .hero-overlay h1 {
        font-size: 70px;
        font-weight: 500;
        margin: 0;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.4);
    }

    .hero-overlay p {
        font-size: 1.25rem;
        max-width: 60ch;
        margin: 0 auto;
        text-shadow: 0 1px 6px rgba(0, 0, 0, 0.35);
    }

    .tag-line {
        display: flex;
        align-items: center;
        justify-content: center;    
    }
    .tag-line p {
        padding: 2rem 2.5rem;
        font-size: 25px;
        font-weight: 500;
    }
    .hero-cta-button {
        display: inline-block;
        background-color: transparent;
        color: white;
        border: 2px solid white;
        padding: 1rem 2rem;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 500;
        font-size: 1.1rem;
        transition: all 0.2s ease;
        margin-top: 1rem;
    }

    .hero-cta-button:hover {
        background-color: white;
        color: #163E93;
        transform: translateY(-2px);
    }

    .services {
        margin-top: 5rem;
        margin-bottom: 5rem;
        justify-content: center;
        align-items: center;
        text-align: center;
        min-height: 50vh;
        width: 100%;
        /* padding: 2rem; */
        min-height: 400px;
        position: relative;
        overflow: hidden;
        display: flex;
        flex-direction: column;
    }
    .services h2 {
        margin: 0;
        font-size: 2.5rem;
        font-weight: 400;
        color: #fff;
        z-index: 2;
        position: relative;
    }

    .services .bg-video {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: 0;
        display: block;
        pointer-events: auto;
        padding: 0;
        max-width: 100%;
        left: 0;
        right: 0;
    }


    .side-by-side {
        display: flex;
        justify-content: space-between;
        align-items: center;
        /* gap: 1rem; */
        padding: 1.5rem 0;
        min-height: 20vh;
    }

    .side-by-side h2 {
        flex: 2;
        text-align: center;
        margin: 9px;
        font-size: 2rem;
        font-weight: 200;
        margin-top: 10px;
    }

    .client-logo {
        width: 140px;
        height: 80px;
        object-fit: contain;
        display: block;
        justify-self: center;
    }
    .client-logos {
        padding: 0;

    }
    .client-logos h2 {
        
    }
    .logo-track  {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(140px,1fr));
        gap: 1rem;

        width: 100vw;
        margin-left: calc(50% - 50vw);
        margin-right: calc(50% - 50vw);
        
    }

    .services {
        margin-top: 7rem;
        
    }





/* Tablets and up */
@media (min-width: 768px) {
    .logo-track {
        grid-template-columns: repeat(3,minmax(0,1fr));
        gap: 1rem;
        
    }


    

    .hamburger {
        display: none;
    }

    }


/* Desktops */
@media (min-width:1024px) {

    .tag-line p {
        padding: 2rem 10rem;
        font-size: 50px;
        font-weight: 500;
        text-align: center;
    }
    .logo-track {
        grid-template-columns: repeat(6, minmax(0,fr));
        gap: 2rem;
        object-fit: contain;
    }   

    .client-logo {
        width: 350px;
        height: 140px;
        object-fit: contain; /* keep logos undistorted inside the fixed box */
        justify-self: center;
        display: block;
    } 

}

@media (max-width: 768px) {
    .hero-overlay {
        padding: 8rem 1.25rem;
    }
    .hero-overlay h1 {
        font-size: 2.25rem;
        font-weight: 500;
    }
    .tag-line p {
        font-size: 1.1rem;
        padding: 1.25rem 1rem;
    }
}

</style>






