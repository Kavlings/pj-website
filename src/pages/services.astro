<style>
    .page-hero {
        position: relative;
        min-height: 60vh;
        width: 100%;
        overflow: hidden;
        background-image: url('/services-hero.jpg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        display: grid;
        place-items: center;
    }

    .page-hero::after {
        content: "";
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.2);
    }

    .hero-overlay {
        position: relative;
        z-index: 1;
        text-align: center;
        color: #fff;
    }

    .hero-overlay h1 {
        font-size: 3rem;
        font-weight: 300;
    }

    .services-intro {
        width: min(85%,1000px);
        margin-inline: auto;
        padding-top: 2rem;
        padding-bottom: 1rem;
    }

    .services-intro p {
        color: #333;
    }

    .service-split {
        display: grid;
        grid-template-columns: 1fr;
        grid-template-areas:
        "media"    
        "text" ;
        gap: 1.25rem;
        align-items: center;
        justify-items: center;
        width: 100%;
        margin-inline: auto;
        padding: 1.5rem 0;
    }

    .service-split .text {
        grid-area: text;
        justify-self: center;
        text-align: center;
        display: grid;
        padding: 1rem;
    }
    .service-split h3 {
        font-size: 2.3rem;
        font-weight: 600;
    }
    .service-image {
        grid-area: media;
        justify-self: center;
        max-width: 100%;
        height: auto;
        width: 340px;
    }

    .service-image img {
        width: 100%;
        height: auto;
        display: block;
        border-radius: 14px;
        box-shadow: 0 8px 24px rgba(0,0,0,0.06);
    }


    .cta {
        width: min(85%, 900px);
        margin-inline: auto;
        text-align: center;
        padding: 2rem 0 3rem;
        display: grid;
        gap: 0.75rem;        
    }

    .cta-button {
        display: inline-block;
        color: #fff;
        background-color: #051C2A;
        text-decoration: none;
        padding: 0.9rem 1.2rem;
        border-radius: 12px;
        transition: filter 0.2s ease;
        font-size: 1rem;
    }

    .cta-button:hover {
        filter: brightness(1.5);
    }

    .text li {
        list-style: none;
        margin: 0;
        padding: 0;

    }

    @media (min-width:768px) {
        .service-split {
            grid-template-columns: 1fr 1fr;
            gap: 1.5rem;
            grid-template-areas: "text media";
        }

        .service-image {
            justify-self: center;
            width: 100%;
        }

        .service-list > .service-split:nth-child(even) {
            grid-template-areas: "media text";
        }

        .service-list > .service-split:nth-child(even) .service-image {
            justify-self: center;
        }


        
    }

</style>
