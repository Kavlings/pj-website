---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro"
---

<Layout title="Contact - PJ Marketing Solutions"> 
    <section class="page-hero">
    <Navigation />
    <div class="hero-overlay">
    <h1> Get in Touch. </h1>
    <p>Ready to drive growth for your next event?</p>    
    </div>    
    </section> 

    <section class="contact-content">
        <div class="contact-container">
            <div class="contact-info">
                <h2>Contact Information</h2>
                <div class="contactForm">

                    <div> 
                        <h3>Email</h3>
                        <p>info@pjmarketing.ae</p>
                        <h3>Phone</h3>
                        <p>+971 50 1351006</p>
                    </div>
                </div>
            </div>
            
            <div class="contact-form-container">
                <h2>Send us a Message</h2>
                <form class="contact-form" id="contactForm">
                    <div class="form-group">
                        <label for="name">Your Name</label>
                        <input type="text" id="name" name="name" minlength="2">
                    </div>

                    <div class="form-group">
                        <label for="email"> Email </label>
                        <input type="email" id="email" name="email" required >
                    </div>
                    
                    <div class="form-group">
                        <label for="company"> Company Website </label>
                        <input type="text" id="company" name="company">
                    </div>


                    <div class="form-group">
                        <label for="message">Tell us a little bit about what you need</label>
                        <textarea name="message" id="message" rows="5" required minlength="10" ></textarea>
                    </div>

                    <button type="submit" class="submit-btn"> Send Message</button>
                </form> 
            </div>
        </div>

        <div id="form-message" class="form-message" role="status" aria-live="polite" aria-atomic="true" style="display: none;"></div>
    </section>



<script>
    const API_BASE_URL = 'https://pjmarketing-backend-489275955421.europe-west1.run.app'; //changed to app engine

    const showToast = (msgEl, {ok, message}) => {
        msgEl.className = ok ? 'form-message success' : 'form-message error'
        msgEl.innerHTML = ok
        ? `<span class="title"> Message Sent </span><span class="meta">${message || 'Thank you! Your message has been sent successfully.'} </span>`
        : `<span class="title"> Something went wrong</span><span class="meta">${message || 'Please try again.'}</span>`
        msgEl.style.display = 'block'
        //allow CSS transition
        requestAnimationFrame(() => msgEl.classList.add('show'));
        //auto hide
        clearTimeout(msgEl._hideTimer);
        msgEl._hideTimer = setTimeout(() => {
            msgEl.classList.remove('show');
            setTimeout(() => (msgEl.style.display = 'none'), 250);
        }, 6000);
    };


    
    const formEl = document.getElementById('contactForm');
    if  (!(formEl instanceof HTMLFormElement)) {
        console.warn('contactForm not found');
        

    } else {
        const form = formEl;
        form.addEventListener('submit', async (e) => {
        e.preventDefault();


        const btn = form.querySelector('.submit-btn')
        const msg = document.getElementById('form-message');
        if (!btn || !msg) return;

        const data = Object.fromEntries(new FormData(form));

        btn.disabled = true; btn.textContent = 'Sending...'; 
        msg.style.display = 'none'; 

        try {
            const res = await fetch(`${API_BASE_URL}/api/contact`, {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify(data)
            });
            let out = {};
            try {
                out = await res.json();
            } catch {}

            const extractError = (o) => {
                if (o?.detail && Array.isArray(o.detail)) return o.detail.map(d => d.msg).join(', ');
                return o?.message || 'Failed.';
            };

            if (res.ok) {
                form.reset();
                btn.textContent = 'Sent';
                showToast(msg, { ok: true, message: extractError(out)});
            } else {
                showToast(msg, {ok: true, message: out.message });
            }
        } catch {
            showToast(msg, {ok: false, message: 'Network error. Please try again.'});
        } finally {
            setTimeout(() => {
                btn.disabled = false; btn.textContent = 'Send Message';
            }, 1500);
        }
    });
    }



    
    
</script>



</Layout>

<Footer slot="footer"/>


<style>

.page-hero {
        position: relative;
        height: 60vh;
        min-height: 400px;
        background: linear-gradient(135deg, #163E93 0%, #1e4ba8 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        text-align: center;
        overflow: hidden;
    }

    .hero-overlay h1 {
        font-size: 3.5rem;
        font-weight: 300;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    .hero-overlay p {
        font-size: 1.25rem;
        font-weight: 300;
        opacity: 0.9;
        max-width: 600px;
        margin: 0 auto;
    }

    .contact-content {
        padding: 4rem 2rem;
        background-color: #f8f9fa;
    }

    .contact-container {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;
        align-items: start;
    }

    .contact-info h2,
    .contact-form-container h2 {
        font-size: 2rem;
        font-weight: 300;
        margin-bottom: 2rem;
        color: #163E93;
    }

    .contactForm {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 1rem;
        padding: 1.5rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .contactForm:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    }

    .contact-icon {
        width: 40px;
        height: 40px;
        object-fit: contain;
    }

    .contactForm h3 {
        font-size: 1.1rem;
        font-weight: 600;
        margin: 0 0 0.25rem 0;
        color: #163E93;
    }

    .contactForm p {
        font-size: 1rem;
        margin: 0;
        color: #666;
    }

    .contact-form-container {
        background: white;
        padding: 2.5rem;
        border-radius: 16px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        display: block;
        margin-bottom: 0.5rem;
        font-weight: 500;
        color: #333;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
        width: 90%;
        padding: 0.75rem 1rem;
        border: 2px solid #e1e5e9;
        border-radius: 8px;
        font-size: 1rem;
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
        font-family: inherit;
    }

    .form-group input:focus,
    .form-group select:focus,
    .form-group textarea:focus {
        outline: none;
        border-color: #163E93;
        box-shadow: 0 0 0 3px rgba(22, 62, 147, 0.1);
    }

    .form-group textarea {
        resize: vertical;
        min-height: 120px;
    }

    .submit-btn {
        background-color: #163E93;
        color: white;
        border: none;
        padding: 1rem 2rem;
        border-radius: 8px;
        font-size: 1.1rem;
        font-weight: 500;
        cursor: pointer;
        transition: background-color 0.2s ease, transform 0.2s ease;
        width: 100%;
    }

    .submit-btn:hover {
        background-color: #1e4ba8;
        transform: translateY(-1px);
    }

    .form-message {
        position: fixed;
        right: 16px;
        bottom: 16px;
        max-width: 420px;
        padding: 0.875rem 1rem;
        border-radius: 10px;
        background: #ffffff;
        color: #222;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        border-left: 6px solid transparent;
        z-index: 9999;
        transform: translateY(12px);
        opacity: 0;
        transition: opacity .25s ease, transform .25s ease;
    }

    .form-message.show {
    opacity: 1;
    transform: translateY(0);
}
.form-message.success { border-left-color: #16a34a; }
.form-message.error   { border-left-color: #dc2626; }
.form-message .title {
    font-weight: 600;
    display: block;
    margin-bottom: 2px;
}
.form-message .meta {
    font-size: 0.9rem;
    opacity: 0.8;
}




    @media (max-width: 768px) {
        .hero-overlay h1 {
            font-size: 2.5rem;
        }

        .hero-overlay p {
            font-size: 1.1rem;
        }

        .contact-container {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .contact-container {
            padding: 2rem 1rem;
        }

        .contact-form-container {
            padding: 1.5rem;
        }

        .contact-content {
            padding: 2rem 1rem;
        }

        .cta-section {
            padding: 3rem 1rem;
        }

        .cta-content h2 {
            font-size: 2rem;
        }
        .cta-content p {
            font-size: 1.1rem;
        }

    @media (max-width:480px) {
        .hero-overlay h1 {
            font-size: 2rem;
        }

        .contactForm {
            padding: 1rem;
        }
        .contact-form-container {
            padding: 1rem;
        }
    }

    }

</style>
