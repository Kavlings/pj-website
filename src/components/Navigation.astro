<nav class="site-nav">
    <!-- <img src="/logos/minimal-pj-logo.jpg" alt="pj logo"> -->
    <h1>PJ Marketing Solutions</h1>
    <button class="hamburger" aria-expanded="false" aria-controls="nav-links" aria-label="Menu">
        <span></span>
        <span></span>
    </button>

    <div id="nav-links" class="nav-links">
        <a href="/">Services</a>
        <a href="/about">About</a>
        <a href="/services">Testimonials</a>
        <a class="contact-button" href="/contact">Contact Us</a>
    </div>
</nav>

<script type="module">
    const button = document.querySelector('.hamburger');
    const links = document.getElementById('nav-links');

    button?.addEventListener('click', () => {
        const expanded = button.getAttribute('aria-expanded') === 'true';
        button.setAttribute('aria-expanded', String(!expanded));
        links.classList.toggle('open')
    });

</script>

<style>

    nav {
        position: fixed;
        top: var(--nav-top);
        left: 0;
        right: 0;
        top: 15px;
        z-index: 1000;
        background: transparent;
    }
    
    .site-nav {
        background-color: white;
        padding: 0.3rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: min(85%,900px);
        height: auto;
        margin-inline: auto;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.08);
        margin-top: 0.5rem;
    }

    
    nav h1 {
        margin: 0;
        color: black;
        font-size: 14px;
        margin-left: 10px;
    }
    
    /* hide links on mobile */
    .nav-links {
        display: none;
        flex-direction: column;
        gap: 0.75rem;
        align-items: center;
    }
    
    .nav-links a {
        color: black;
        text-decoration: none;
        padding: 0.5rem 0.5rem;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }
    
    nav a:hover {
        background-color: rgba(255, 255, 255, 0.1);
    }

    .nav-links a.contact-button {
        margin-inline-start: auto;
        display: inline-flex;
        align-items: center;    
        /* padding: 0.5rem 0.9rem; */
        color: #fff;
        border: 1px solid rgba(255, 255, 255, 0.12);
        border-radius: 12px;
        text-decoration: none;
        line-height: 1;
        cursor: pointer;
        background-color: darkblue;
        padding: 1rem;
    }

    .nav-links a.contact-button:hover {
        background-color: darkblue;
        color: #fff;
        filter: brightness(1.1);
    }

    .hamburger {
        display: inline-flex;
        flex-direction: column;
        justify-content: center;
        gap: 6px;
        width: 36px;
        height: 36px;
        background: transparent;
        border: 0;
        cursor: pointer;
    }

    .hamburger span {
        display: block;
        width: 100%;
        height: 2px;
        background: black;
        border-radius: 1px;
    }

    .nav-links.open {
        display: flex;
    }

    /* Tablet and up */
    @media (min-width: 768px) {
        .nav-links {
            display: flex;
            flex-direction: row;
            gap: 1rem;
        }
        .hamburger {
            display: none;
        }
    }

        /* Desktop and up */
    @media (min-width: 1024px) {
        nav h1 {
            font-size: 18px;
        }
    }

</style>