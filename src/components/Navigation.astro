<nav class="site-nav">
    <div class="logo-group">

        <a href="/" class="logo-link">
            <img class="nav-logo" src="/logos/minimal-pj-logo.jpg" alt="pj logo" >
            <h1>PJ Marketing Solutions</h1> 
        </a>

    </div>

    <button class="hamburger" aria-expanded="false" aria-controls="nav-links" aria-label="Menu">
        <span></span>
        <span></span>
    </button>

    <div id="nav-links" class="nav-links">
        <a href="/about">About Us</a>
        <a href="/services">Services</a>
        <!-- <a href="/testimonials">Testimonials</a> -->
        <a class="contact-button" href="/contact">Contact Us</a>
    </div>
</nav>

<script type="module">
    const button = document.querySelector('.hamburger');
    const links = document.getElementById('nav-links');

    function setOpen(isOpen) {
        button.setAttribute('aria-expanded', String(isOpen));
        links.classList.toggle('open', isOpen);
        document.body.classList.toggle('no-scroll', isOpen)
    }

    button?.addEventListener('click', () => {
        const expanded = button.getAttribute('aria-expanded') === 'true';
        button.setAttribute('aria-expanded', String(!expanded));
        links.classList.toggle('open');
    });

    // Close overlay when a link is clicked

    links?.addEventListener('click', (e) => {
        const target = e.target;
        if (target instanceof HTMLElement && target.tagName === 'A') {
            setOpen(false);
        }
    });

    //Close on escape key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') setOpen(false);
    });


</script>

<style>

    body.no-scroll {
        overflow: hidden;
        height: 100vh;
    }

    nav {
        position: fixed;
        /* top: var(--nav-top); */
        top: 15px;
        left: 0;
        right: 0;
        z-index: 1005;
        background: transparent;
    }
    
    .site-nav {
        background-color: white;
        padding: 0.3rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: min(85%,900px);
        height: auto;
        margin-inline: auto;
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
        border: 1px solid rgba(255, 255, 255, 0.08);
        margin-top: 0.5rem;

    }

    .logo-group {
        display: flex;
        align-items: center;
        gap: 3px;
    }

    .logo-link {
        display: flex;
        align-items: center;
        gap: 3px;
        text-decoration: none;
        color: inherit;
    }

    .logo-link:hover {
        text-decoration: none;
        background-color: transparent;
    }


    
    nav h1 {
        margin: 0;
        color: black;
        font-size: 14px;

    }

    .nav-logo {
        width: 3rem;
        height: auto;
        margin: 0;
        margin-bottom: 6px;
        margin-left: 4px;

    }

    
    /* hide links on mobile */
    .nav-links {
        position: fixed;
        inset: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 1rem;
        background-color: white;
        z-index: 999; /* Below nav container */
        opacity: 0;
        visibility: hidden;
        pointer-events: none;
        transform: scale(1.02);
        transition:
            opacity 0.28s ease,
            transform 0.28s ease,
            visibility 0s linear 0.28s;
        ;

    }

    .nav-links.open {
        opacity: 1;
        visibility: visible;
        pointer-events: auto;
        transform: scale(1);
        transition: 
            opacity 0.28s ease,
            transform 0.28s ease,
            visibility 0s;
    }
    
    .nav-links a {
        color: black;
        text-decoration: none;
        padding: 0.75rem 1rem;
        border-radius: 8px;
        font-size: 1.25rem;
        transition: background-color 0.2s ease, transform 0.2s ease, opacity 0.28s ease;
        opacity: 0;
        transform: translateY(6px);
    }


    .nav-links.open a {
        opacity: 1;
        transform: translateY(0);
    }

    .nav-links.open a:nth-child(1) { transition-delay: 0.05s;}
    .nav-links.open a:nth-child(2) { transition-delay: 0.10s;}
    .nav-links.open a:nth-child(3) { transition-delay: 0.15s;}
    .nav-links.open a:nth-child(4) { transition-delay: 0.20s;}
    
    nav a:hover {
        /* background-color: rgba(0, 0, 0, 0.06); */
    }

    .nav-links a.contact-button {
        color: #fff;
        border: 1px solid rgba(0, 0, 0, 0.08);
        border-radius: 12px;
        background-color: #163E93;
        padding: 0.9rem 1.2rem;
    }

    .nav-links a.contact-button:hover {
        background-color: #163E93;
        color: #fff;
        filter: brightness(1.1);
    }

    .hamburger {
        display: inline-flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 6px;
        width: 40px;
        height: 40px;
        background: transparent;
        border: 0;
        cursor: pointer;
        -webkit-tap-highlight-color: transparent;
        z-index: 1006;
    }

    .hamburger span {
        display: block;
        width: 22px;
        height: 2px;
        background: black;
        border-radius: 1px;
        transition: transform 0.3s ease, opacity 0.2s ease, width 0.3s ease;
        transform-origin: center;
    }

    /* Morph into X when open */
    .hamburger[aria-expanded="true"] span:nth-child(1) {
        transform: translateY(4px) rotate(45deg);
        width: 24px;
    }
    .hamburger[aria-expanded="true"] span:nth-child(2) {
        transform: translateY(-4px) rotate(-45deg);
        width: 24px;
    }
    .nav-links.open {
        display: flex;
    }

    /* Tablet and up */
    @media (min-width: 768px) {

        .nav-links {
        position: static;
        inset: auto;
        opacity: 1;
        visibility: visible;
        pointer-events: auto;
        transform: none;
        display: flex;
        flex-direction: row;
        align-items: center;
        gap: 1rem;
        background-color: transparent;
    }

        .nav-links a {
        opacity: 1;
        transform: translateY(0);
        font-size: 1rem;
        padding: 0.5rem 0.5rem;


        }
        .hamburger {
            display: none;
        }
    }

        /* Desktop and up */
    @media (min-width: 1024px) {
        nav h1 {
            font-size: 18px;
        }
    }

</style>