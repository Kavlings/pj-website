<div class="footer">
    <div class="footer-column">
        <h3>Company Info</h3>
        <a href="/">Home</a>
        <a href="/about">About</a>

    </div>
    <div class="footer-column">
        <h3>Column 2</h3>
        <a href="/services">Services</a>
        <a href="/contact">Contact Us</a>
    </div>

</div>
<style>


    .footer {
        display: flex;
        /* stack vertically on mobile */
        flex-direction: row; 
        justify-content: space-around;
        background-color: darkblue;
        color: white;
        padding: 1rem;
        gap: 1rem;
    }
    .footer-column {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }
    .footer-column h3 {
        /* remove default browser settings */
        margin: 0;
        /* Make headers smaller than main test */
        font-size: 1.2rem;
        /* Add space below the header */
        margin-bottom: 0.5rem;
    }


    a {

        padding: 1rem;
        text-decoration: none;
        border-radius:4px;
        margin-right: 0;
        transition: background-color 0.3s ease;
        font-size: 1rem;
        color: white;
    }

    a:hover {
        background-color: rgba(255, 255, 255, 0.1);
    }
    @media (min-width 768px) {
        .footer {
            /* Back to horizontal on larger screens */
            flex-direction: row; 
            /* Better spacing on larger screens */
            gap: 2rem;
        }
        a {
            /* reduce margin since we're using gap */
            margin-right: 0;
        }
        
    }
</style>