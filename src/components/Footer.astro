---
const year = new Date().getFullYear();
---
<div class="footer">
    <div class="footer-content" aria-label="Footer">
        <div class="footer-column">
            <h3>Company</h3>
            <a href="/">Home</a>
            <a href="/about">About</a>
            <a href="/services">Services</a>
        </div>
        <div class="footer-column">
            <h3>Connect</h3>
            <a href="/contact">Contact Us</a>
        </div>
    </div>
        <div class="copyright">
            <p> Â© 2014-{year} PJ Marketing Solutions FZ LLE </p>
        </div>
</div>
<style>


    .footer {

        display: flex;
        /* stack vertically on mobile */
        margin-inline: auto;
        flex-direction: column; 
        justify-content: space-around;
        background-color: #163E93;
        color: white;
        padding: 4rem 1rem;
        gap: 1rem;
        position: relative;
    }

    .footer-content {
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        gap: 1rem;
    }

    .footer-column ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }


    .footer-column {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
    }
    .footer-column h3 {
        /* remove default browser settings */
        margin: 0;
        /* Make headers smaller than main test */
        font-size: 1rem;
        font-weight: 400;
        /* Add space below the header */
        margin-bottom: 0.1rem;
    }
    

    a {
        padding: 0.5rem;
        text-decoration: none;
        border-radius: 4px;
        margin-right: 0;
        transition: background-color 0.3s ease;
        font-size: 0.8rem;
        color: white;
    }

    a:hover {
        background-color: rgba(255, 255, 255, 0.1);
    }

    a:focus-visible {
        outline: 2px solid #fff;
        outline-offset: 2px;
    }
    @media (min-width: 768px) {

        .footer-content {
            flex-direction: row;
            gap: 2rem;
        }
        a {
            /* reduce margin since we're using gap */
            margin-right: 0;
        }
        
    }

    .copyright{
        position: absolute;
        font-size: 8px;
        bottom: 1px;
        right: 0.5rem;
        margin: 0;
    }

</style>